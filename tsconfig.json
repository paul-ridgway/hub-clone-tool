{
    "compilerOptions": {
        "inlineSourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "target": "es2017"
    },
    "include": [
        "src/**/*"
    ]
}
